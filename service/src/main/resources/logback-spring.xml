<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 常量定义start -->
    <!-- 默认日志输出格式 -->
    <contextName>${HOSTNAME}</contextName>
    <property name="DEFAULT_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS}$$[${HOSTNAME}]$$[%thread]$$[%level]$$%logger{50}$$[%file:%line]$$%msg%n"/>
    <property name="MAX_HISTORY" value="30"/>
    <!-- 常量定义end -->

    <!-- 默认日志的console appender，本地使用的日志 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${DEFAULT_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <springProfile name="!local">
        <!-- 服务器上使用的appender start -->
        <!-- 默认的file appender，按天切分日志 -->
        <appender name="ROLLING_FILE_DEFAULT" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <append>true</append>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>/home/logs/shop-biz-service/application.${HOSTNAME}.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>${MAX_HISTORY}</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>${DEFAULT_PATTERN}</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>

        <!-- 错误日志，按天切分 -->
        <appender name="ROLLING_FILE_ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
            <append>true</append>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>/home/logs/shop-biz-service/application_error.${HOSTNAME}.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>${MAX_HISTORY}</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>${DEFAULT_PATTERN}</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>
    </springProfile>

    <logger name="com.hualala" level="INFO" additivity="false">

        <springProfile name="local">
            <appender-ref ref="STDOUT"/>
        </springProfile>

        <springProfile name="!local">
            <appender-ref ref="ROLLING_FILE_DEFAULT" />
            <appender-ref ref="ROLLING_FILE_ERROR" />
        </springProfile>

    </logger>

    <root level="INFO">
        <springProfile name="local">
            <appender-ref ref="STDOUT"/>
        </springProfile>

        <springProfile name="!local">
            <appender-ref ref="ROLLING_FILE_DEFAULT" />
            <appender-ref ref="ROLLING_FILE_ERROR" />
        </springProfile>
    </root>
</configuration>